        <!--<Button-->
            <!--android:id="@+id/price_arrow_up"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--app:layout_constraintTop_toTopOf="@+id/price"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/price"-->
            <!--app:layout_constraintLeft_toRightOf="@+id/price_arrow_down"-->
            <!--android:layout_marginLeft="25dp"-->
            <!--android:background="@drawable/ic_keyboard_arrow_up_black_24dp"/>-->

        <View
            android:id="@+id/temp_line_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_temp_height_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp_line_5"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="数量"/>

        <EditText
            android:id="@+id/count_edit"
            android:layout_width="@dimen/common_edit_width"
            android:layout_height="@dimen/common_text_height"
            app:layout_constraintTop_toTopOf="@+id/count"
            app:layout_constraintBottom_toBottomOf="@+id/count"
            app:layout_constraintLeft_toRightOf="@+id/count"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/shape_edit_rim_eeeeee"/>

        <!--<Button-->
            <!--android:id="@+id/count_arrow_down"-->
