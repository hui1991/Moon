<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_recyclerView_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/base_bg">

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_temp_height_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="品名"/>

        <TextView
            android:id="@+id/product_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size_1"
            app:layout_constraintBottom_toBottomOf="@+id/product_name"
            app:layout_constraintLeft_toRightOf="@+id/product_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/product_name" />

        <View
            android:id="@+id/temp_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/manufacturers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp_line_1"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin_top"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="生产厂家"/>

        <TextView
            android:id="@+id/manufacturers_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/manufacturers"
            app:layout_constraintBottom_toBottomOf="@+id/manufacturers"
            app:layout_constraintLeft_toRightOf="@+id/manufacturers"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:gravity="left"/>

        <View
            android:id="@+id/temp_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manufacturers"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/batch_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp_line_2"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin_top"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="批号"/>

        <TextView
            android:id="@+id/batch_number_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/batch_number"
            app:layout_constraintBottom_toBottomOf="@+id/batch_number"
            app:layout_constraintLeft_toRightOf="@+id/batch_number"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:gravity="left"/>

        <View
            android:id="@+id/temp_line_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_temp_height_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batch_number"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/product_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp_line_3"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin_top"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="生产日期"/>

        <TextView
            android:id="@+id/product_data_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/product_data"
            app:layout_constraintBottom_toBottomOf="@+id/product_data"
            app:layout_constraintLeft_toRightOf="@+id/product_data"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:gravity="left"/>

        <View
            android:id="@+id/temp_line_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_temp_height_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_data"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@color/base_bg"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/temp_line_4"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            android:layout_marginTop="@dimen/common_margin_top"
            android:textSize="@dimen/common_text_size_1"
            android:textColor="@android:color/black"
            android:text="价格(元)"/>

        <EditText
            android:id="@+id/price_edit"
            android:layout_width="@dimen/common_edit_width"
            android:layout_height="@dimen/common_text_height"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintLeft_toRightOf="@+id/price"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/shape_edit_rim_eeeeee"/>

