<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity"
    android:background="@color/base_bg">

    <EditText
        android:id="@+id/login_user_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_login_edit_height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_password"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_padding_left"
        android:background="@drawable/shape_edit_rim_eeeeee"
        android:hint="请输入账号"/>

    <ImageView
        android:id="@+id/login_user_name_delete"
        android:layout_width="@dimen/common_margin"
        android:layout_height="@dimen/common_margin"
        app:layout_constraintTop_toTopOf="@+id/login_user_name"
        app:layout_constraintBottom_toBottomOf="@+id/login_user_name"
        app:layout_constraintRight_toRightOf="@+id/login_user_name"
        android:paddingRight="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:src="@mipmap/password_delete"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_login_edit_height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_login"
        app:layout_constraintTop_toBottomOf="@+id/login_user_name"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:hint="请输入密码"
        android:background="@drawable/shape_edit_rim_eeeeee"
        android:paddingLeft="@dimen/common_padding_left"
        android:inputType="textPassword"/>vb不帮你们，

    <ImageView
        android:id="@+id/login_password_delete"
        android:layout_width="@dimen/common_margin"
        android:layout_height="@dimen/common_margin"
        app:layout_constraintTop_toTopOf="@+id/login_password"
        app:layout_constraintBottom_toBottomOf="@+id/login_password"
        app:layout_constraintRight_toRightOf="@+id/login_password"
        android:paddingRight="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:src="@mipmap/password_delete"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_login_edit_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_login_edit_height"
        android:background="@drawable/shape_red_background_radius_8dp"
        android:text="登录"
        android:textSize="@dimen/common_text_size_3"
        android:textColor="@android:color/white"/>

</android.support.constraint.ConstraintLayout>
